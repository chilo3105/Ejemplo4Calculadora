<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:backgroundTint="#323232"
        android:textSize="30sp"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintRight_toLeftOf="@id/btnPunto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="30sp"
        android:backgroundTint="#323232"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintBottom_toTopOf="@id/btnPunto"
        app:layout_constraintRight_toLeftOf="@id/btn2"
        />
    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="30sp"
        android:backgroundTint="#323232"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintRight_toLeftOf="@id/btn3"
        app:layout_constraintBottom_toTopOf="@id/btnPunto"
        />
    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="30sp"
        android:backgroundTint="#323232"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_constraintRight_toLeftOf="@id/btnMas"
        app:layout_constraintBottom_toTopOf="@id/btnPunto"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="30sp"
        android:backgroundTint="#323232"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintRight_toLeftOf="@id/btn5"
        app:layout_constraintBottom_toTopOf="@id/btn1"
        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="30sp"
        android:backgroundTint="#323232"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintRight_toLeftOf="@id/btn6"
        app:layout_constraintBottom_toTopOf="@id/btn2"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        />
    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="30sp"
        android:backgroundTint="#323232"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        app:layout_constraintRight_toLeftOf="@id/btnMenos"
        app:layout_constraintBottom_toTopOf="@id/btn3"
        />
    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="30sp"
        android:backgroundTint="#323232"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnAc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn8"
        app:layout_constraintBottom_toTopOf="@id/btn4"
        />
    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="30sp"
        android:backgroundTint="#323232"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btnDel"
        app:layout_constraintBottom_toTopOf="@id/btn5"
        app:layout_constraintRight_toLeftOf="@id/btn9"
        />
    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="30sp"
        android:backgroundTint="#323232"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toBottomOf="@id/btnPorcentaje"
        app:layout_constraintRight_toLeftOf="@id/btnMultiplicar"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        />
    <Button
        android:id="@+id/btnAc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="AC"
        android:backgroundTint="#808080"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtResultado"
        app:layout_constraintRight_toLeftOf="@id/btnDel"
        app:layout_constraintBottom_toTopOf="@id/btn7"
        />
    <Button
        android:id="@+id/btnDel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="DEL"
        android:textSize="30sp"
        android:backgroundTint="#808080"
        android:textColor="#000000"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintLeft_toRightOf="@id/btnAc"
        app:layout_constraintTop_toBottomOf="@id/txtResultado"
        app:layout_constraintRight_toLeftOf="@id/btnPorcentaje"
        app:layout_constraintBottom_toTopOf="@id/btn8"
        />
    <Button
        android:id="@+id/btnMas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textSize="30sp"
        android:backgroundTint="#F39C12"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@id/btnMenos"
        app:layout_constraintBottom_toTopOf="@id/btnPunto"
        />
    <Button
        android:id="@+id/btnMenos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="30sp"
        android:backgroundTint="#F39C12"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        app:layout_constraintTop_toBottomOf="@id/btnMultiplicar"
        app:layout_constraintBottom_toTopOf="@id/btnMas"
        />
    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="*"
        android:textSize="30sp"
        android:backgroundTint="#F39C12"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        app:layout_constraintTop_toBottomOf="@id/btnDividir"
        app:layout_constraintBottom_toTopOf="@id/btnMenos"
        />
    <Button
        android:id="@+id/btnDividir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="รท"
        android:textSize="30sp"
        android:backgroundTint="#F39C12"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnPorcentaje"
        app:layout_constraintTop_toBottomOf="@id/txtResultado"
        app:layout_constraintBottom_toTopOf="@id/btnMultiplicar"
        />
    <Button
        android:id="@+id/btnPorcentaje"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        android:backgroundTint="#F39C12"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintLeft_toRightOf="@id/btnDel"
        app:layout_constraintTop_toBottomOf="@id/txtResultado"
        app:layout_constraintRight_toLeftOf="@id/btnDividir"
        app:layout_constraintBottom_toTopOf="@id/btn9"
        />
    <Button
        android:id="@+id/btnIgual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:textSize="30sp"
        android:backgroundTint="#F39C12"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnMas"
        app:layout_constraintLeft_toRightOf="@id/btnPunto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/btnPunto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:backgroundTint="#323232"
        android:textSize="30sp"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_constraintRight_toLeftOf="@id/btnIgual"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <EditText
        android:id="@+id/txtResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:enabled="false"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="right"
        android:background="#00ff0080"


        app:layout_constraintTop_toBottomOf="@id/txtPantalla"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnDel"/>
    <EditText
        android:id="@+id/txtPantalla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="text"
        android:enabled="false"
        android:textColor="#000000"
        android:textSize="30sp"
        android:gravity="right"
        android:background="#00ff0080"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtResultado"/>


</androidx.constraintlayout.widget.ConstraintLayout>